{
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "define": true
  },
  "extends": ["eslint:recommended"],
  "rules": {
    "linebreak-style": ["error","unix"],
    "quotes": ["error","single"],
    "semi": ["error","always"],
    "no-console": ["warn", { "allow": ["info", "error"] }]
  },
  "parserOptions": {
    "ecmaVersion": 6
  }
}